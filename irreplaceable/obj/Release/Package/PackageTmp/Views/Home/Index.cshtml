<div class="site-section site-blocks-2">
    <div class="container">
        <div class="row">

            @foreach (var item in Model.ProductsCategorysData)
            {
                <div class="col-6 col-6 col-lg-3 mb-4 mb-lg-0">
                    <a class="block-2-item" href="@Url.Action("Category" , "Shop" , new { id = item.category_no})">
                        <figure class="image">
                            <img src="@Url.Content("~/Images/Categorys/" + item.category_no +".jpg")" alt="" class="img-fluid">
                        </figure>
                        <div class="text">
                            @*<span class="text-uppercase">@item.category_name</span>*@
                            <h3>@item.category_no</h3>
                        </div>
                    </a>
                </div>
            }

        </div>
    </div>
</div>

<div class="site-section block-3 site-blocks-2 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7 site-section-heading text-center pt-4">
                <h2>Popular Products</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="nonloop-block-3 owl-carousel">
                    @foreach (var item in Model.ProductsData)
                    {
                        <div class="item">
                            <div class="block-4 text-center">
                                <figure class="block-4-image">
                                    <a class="block-2-item" href="@Url.Action("Detail" , "Shop" , new { id = item.product_no})">
                                        <img src="@Url.Content("~/Images/Products/" + item.product_no + ".jpg")" alt="Image placeholder" class="img-fluid">
                                    </a>
                                </figure>
                                <div class="block-4-text p-4">
                                    <h3><a href="@Url.Action("Detail" , "Shop" , new { id = item.product_no})">@item.product_name</a></h3>
                                    <p class="mb-0">@item.category_no</p>
                                    <p class="text-primary font-weight-bold">$@item.price</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

