@using PagedList;
@using PagedList.Mvc;
@model IEnumerable<irreplaceable.Models.Orders>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row pt-3">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body data-list">
                <div class="mb-2">
                    @using (Html.BeginForm("Search", "Orders", FormMethod.Post))
                    {
                        <table>
                            <tr>
                                <td>
                                    <span class="control-label">查詢：</span>
                                </td>
                                <td class="pr-2">
                                    <input id="search_text" name="search_text" type="text" class="form-control data-list-search-text" placeholder="請輸入要查詢的內容!!" />
                                </td>
                                <td>
                                    <input type="submit" value="查詢" class="btn btn-primary" />
                                </td>
                            </tr>
                        </table>
                    }
                </div>
                <table class="table">
                    <tr>
                        <th>
                            @Html.ActionLink("新增", "Create", "Orders", new { Area = "" }, new { @class = "btn btn-primary" })
                        </th>
                        <th>
                            <a href="@Url.Action("ColumnSort" , new { id = "order_no"})">
                                @Html.DisplayNameFor(model => model.order_no)
                            </a>
                            @SessionService.GetColumnSortIcon(0, "order_no")
                        </th>
                        <th>
                            <a href="@Url.Action("ColumnSort" , new { id = "order_date"})">
                                @Html.DisplayNameFor(model => model.order_date)
                            </a>
                            @SessionService.GetColumnSortIcon(0, "order_date")
                        </th>
                        <th>
                            <a href="@Url.Action("ColumnSort" , new { id = "order_status"})">
                                @Html.DisplayNameFor(model => model.order_status)
                            </a>
                            @SessionService.GetColumnSortIcon(0, "order_status")
                        </th>
                        <th>
                            <a href="@Url.Action("ColumnSort" , new { id = "user_no"})">
                                @Html.DisplayNameFor(model => model.user_no)
                            </a>
                            @SessionService.GetColumnSortIcon(0, "user_no")
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.order_user_name)
                        </th>
                        <th>
                            <a href="@Url.Action("ColumnSort" , new { id = "payment_no"})">
                                @Html.DisplayNameFor(model => model.payment_no)
                            </a>
                            @SessionService.GetColumnSortIcon(0, "payment_no")
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.payment_name)
                        </th>
                        <th>
                            <a href="@Url.Action("ColumnSort" , new { id = "shipping_no"})">
                                @Html.DisplayNameFor(model => model.shipping_no)
                            </a>
                            @SessionService.GetColumnSortIcon(0, "shipping_no")
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.shipping_name)
                        </th>
                        <th>
                            <a href="@Url.Action("ColumnSort" , new { id = "receive_name"})">
                                @Html.DisplayNameFor(model => model.receive_name)
                            </a>
                            @SessionService.GetColumnSortIcon(0, "receive_name")
                        </th>
                        <th>
                            <a href="@Url.Action("ColumnSort" , new { id = "receive_phone"})">
                                @Html.DisplayNameFor(model => model.receive_phone)
                            </a>
                            @SessionService.GetColumnSortIcon(0, "receive_phone")
                        </th>
                        <th>
                            <a href="@Url.Action("ColumnSort" , new { id = "receive_address"})">
                                @Html.DisplayNameFor(model => model.receive_address)
                            </a>
                            @SessionService.GetColumnSortIcon(0, "receive_address")
                        </th>
                        <th>
                            <a href="@Url.Action("ColumnSort" , new { id = "totals"})">
                                @Html.DisplayNameFor(model => model.totals)
                            </a>
                            @SessionService.GetColumnSortIcon(0, "totals")
                        </th>
                        <th>
                                @Html.DisplayNameFor(model => model.remark)

                        </th>

                    </tr>

                    @foreach (var item in Model)
                    {
                <tr>
                    <td >
                        @Html.ActionLink("明細", "Detail", "Orders", new { id = item.order_no }, new { @class = "btn btn-success" })
                        @Html.ActionLink("修改", "Edit", "Orders", new { id = item.order_no }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("刪除", "Delete", "Orders", new { id = item.rowid }, new { @class = "btn btn-danger", onclick = "return confirm('是否確定要刪除?');" })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.order_no)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.order_date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.order_status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.user_no)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.order_user_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.payment_no)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.payment_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.shipping_no)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.shipping_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.receive_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.receive_phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.receive_address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.totals)
                    </td>
                    <td class="data-list-max">
                        @Html.DisplayFor(modelItem => item.remark)
                    </td>

                </tr>
                    }

                </table>
            </div>
            <div class="card-footer">
                <table>
                    <tr>
                        <td class="pr-2">
                            <span class="control-label">
                                @SessionService.GetPageInfo(0)
                            </span>
                        </td>
                        <td>@Html.PagedListPager((IPagedList)Model, x => Url.Action("Index", new { page = x }))</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
